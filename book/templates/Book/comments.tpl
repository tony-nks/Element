<div class="row-fluid">
   <div class="span2 visible-desktop">
      <div class="wrapper">
         <img  src="{foto}" alt=""/>
         <div class="description6">
            <div class="description_content">   
            </div>
         </div>
      </div>
   </div>
   <div class="span10">
      [not-group=5]
      <span class="post-meta pull-right">
         <div class="dropdown">


         </div>
      </span>
      [/not-group]
      [aviable=lastcomments]
      <h4 class="sep">{news_title}</h4>
      [/aviable]
      <span class="post-meta"><strong>{author}</strong>  {date} 			[declination={comm-num}]комментари|й|я|ев[/declination]  
			[declination={news-num}]публикаци|я|и|й[/declination]</span>

      <p>{comment}</p>
