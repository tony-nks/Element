    [rating-type-2]<div class="ratebox2">
 [rating-plus]<img src="{THEME}/images/like.png" title="Нравится" alt="Нравится" style="width:14px;" />[/rating-plus] {rating} </div>[/rating-type-2]
    [rating-type-3]<div class="ratebox3">
 [rating-minus]<img src="{THEME}/images/ratingminus.png" title="Не нравится" alt="Не нравится" style="width:14px;" />[/rating-minus] {rating} [rating-plus]<img src="{THEME}/images/ratingplus.png" title="Нравится" alt="Нравится" style="width:14px;" />[/rating-plus] 
    </div>[/rating-type-3]
[/rating]

         
   </div>
